{
  "name": "rg-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "babel src -d ./bin",
    "start": "npm run build && cp -R ./src/config ./bin/config && cross-env NODE_ENV=development node ./bin",
    "restart": "rimraf bin && npm run start",
    "dev": "cross-env NODE_ENV=development nodemon --exec npm run restart",    
    "test": "npm run migrate:reset && cross-env NODE_ENV=test jest --testTimeout=100000 --forceExit --maxWorkers=1",
    "migrate": "cross-env NODE_ENV=test npx sequelize-cli db:migrate",
    "migrate:reset": "cross-env NODE_ENV=test npx sequelize-cli db:migrate:undo:all && npm run migrate"
  },
  "author": "William Tsai",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "express-jwt": "^6.0.0",
    "log4js": "^6.3.0",
    "md5": "^2.3.0",
    "npm-run-all": "^4.1.5",
    "sequelize": "^6.6.5",
    "sqlite3": "^5.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "modulePathIgnorePatterns": ["bin/test/"]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ],
    "ignore": [
      "test"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.14.8",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.8",
    "cross-env": "^7.0.3",
    "jest": "^27.0.6",
    "rimraf": "^3.0.2",
    "sequelize-cli": "^6.2.0",
    "supertest": "^6.1.4"
  }
}
